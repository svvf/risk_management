{
  "name": "cpapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "5.9.8",
    "cds-dbm": "^0.0.36",
    "cds-pg": "^0.1.30",
    "express": "^4",
    "@sap/cds-odata-v2-adapter-proxy":"*",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.9"
  },
  "scripts": {
    "start": "npx nodemon -e cds.csv.properties -w app -w db -x \"cds deploy && cds run\"",
    "watch-risks": "cds watch --open risks/webapp/index.html?sap-ui-xx-viewCache=false",
    "deploy": "npx cds-dbm deploy",
    "run": "npx cds run"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "database",
        "dialect": "plain"
        },
        "database": {
          "impl": "cds-pg",
          "model": [
            "srv"
          ]
        }
      },
    "migrations": {
      "db": {
        "schema": {
          "default": "public",
          "clone": "_cdsdbm_clone",
          "reference": "_cdsdbm_ref"
        },
        "deploy": {
          "tmpFile": "tmp/_autodeploy.json",
          "undeployFile": "db/undeploy.json"
        }
      }
    }
  }
}
